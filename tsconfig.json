{
  "compilerOptions": {
    "outDir": "dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    "baseUrl": "src",
    "strict": true,
    "target": "ES2022",
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["/node_modules"]
}
